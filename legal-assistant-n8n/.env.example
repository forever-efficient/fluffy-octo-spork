# Legal Assistant n8n Bot Environment Configuration

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=YOUR_TELEGRAM_BOT_TOKEN_HERE
TELEGRAM_WEBHOOK_URL=https://your-domain.com/webhook/telegram-webhook

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=YOUR_SUPABASE_SERVICE_ROLE_KEY
SUPABASE_ANON_KEY=YOUR_SUPABASE_ANON_KEY

# For PDF Processing Scripts (process-pdfs-from-storage-idempotent.py)
SUPABASE_KEY=YOUR_SUPABASE_SERVICE_ROLE_KEY
STORAGE_BUCKET=legal-documents
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# AI Model Configuration (Using Groq - Recommended)

# Groq API (Primary AI provider - Fast and reliable)
GROQ_API_KEY=YOUR_GROQ_API_KEY

# Alternative AI Providers (Optional backups)
# OpenAI (Has free tier limits)
OPENAI_API_KEY=YOUR_OPENAI_API_KEY

# Hugging Face (Free tier available - backup option)
HUGGINGFACE_API_TOKEN=YOUR_HUGGINGFACE_API_TOKEN

# Alternative AI Providers (Free options)
# Cohere API (Free tier available)
COHERE_API_KEY=YOUR_COHERE_API_KEY

# Google AI Studio (Free tier available)
GOOGLE_AI_API_KEY=YOUR_GOOGLE_AI_API_KEY

# n8n Configuration
N8N_HOST=0.0.0.0
N8N_PORT=5678
N8N_PROTOCOL=https
N8N_BASIC_AUTH_ACTIVE=true
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=YOUR_SECURE_PASSWORD

# Webhook Configuration
WEBHOOK_URL=https://your-domain.com

# Database Configuration (if using local PostgreSQL instead of Supabase)
DB_TYPE=postgresdb
DB_POSTGRESDB_HOST=localhost
DB_POSTGRESDB_PORT=5432
DB_POSTGRESDB_DATABASE=legal_assistant
DB_POSTGRESDB_USER=your_db_user
DB_POSTGRESDB_PASSWORD=your_db_password

# File Storage Configuration
# For PDF storage - using Supabase Storage
STORAGE_TYPE=supabase
STORAGE_BUCKET_NAME=legal-documents

# Legal API Keys (Optional - for enhanced functionality)
COURTLISTENER_API_KEY=YOUR_COURTLISTENER_API_KEY
OPENSTATES_API_KEY=YOUR_OPENSTATES_API_KEY

# Security Configuration
ENCRYPTION_KEY=YOUR_32_CHARACTER_ENCRYPTION_KEY

# Logging Configuration
LOG_LEVEL=info
LOG_OUTPUT=console

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_TIME_WINDOW=3600

# Memory Management
CONVERSATION_MEMORY_LIMIT=5000  # characters
CONVERSATION_HISTORY_DAYS=30

# AI Model Configuration
AI_MODEL_TEMPERATURE=0.3
AI_MODEL_MAX_TOKENS=1000
AI_RESPONSE_TIMEOUT=30000  # milliseconds